<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/nome_edittext_activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/seu_nome"
        android:inputType="text"
        android:layout_marginBottom="@dimen/edittext_marginbottom"/>

    <EditText
        android:id="@+id/idade_edittext_activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sua_idade"
        android:inputType="number"
        android:layout_marginBottom="@dimen/edittext_marginbottom"/>

    <EditText
        android:id="@+id/email_edittext_activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/seu_e_mail"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="@dimen/edittext_marginbottom"/>

    <Button
        android:id="@+id/ok_button_activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ok"/>



</LinearLayout>